{%extends 'base.jinja'%}

{%block title%} Editar Cliente {%endblock%}

{%block content%}

<link href="../../static/style/style.css" rel="stylesheet">
<link href="../../static/style/forms.css" rel="stylesheet">


<form method="post" class="createForm">
    <a href="{{url_for('index')}}" class="btn btn-primary"><strong>Volver</strong></a>
    <div class="formContent">
        <div class="row">
            <div class="col col-sm-12 col-lg-4 col-12">
                <label for="usernameInput" class="form-label"><strong>Nombre de Usuario</strong></label>
                <input type="text" name="username" class="form-control" id="usernameInput">
            </div>
            <div class="col col-sm-12 col-lg-4 col-12">
                <label for="passwdInput" class="form-label"><strong>Contraseña</strong></label>
                <input type="password" name="passwd" class="form-control" id="passwdInput">
            </div>
            <div class="col col-sm-12 col-lg-4 col-12">
                <label for="passwd2input" class="form-label"><strong>Confirmar Contraseña</strong></label>
                <input type="password" name="passwd2" class="form-control" id="passwd2input">
            </div>
        </div>
        <br>
       
    <div class="buttonsForm">
        <button type="submit" class="btn btn-success"><strong>Editar</strong></button>
    </div>
</form>


{%endblock%}